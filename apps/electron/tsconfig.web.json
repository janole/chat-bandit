{
    "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
    "include": [
        "env.d.ts",
        "src/renderer/src/**/*",
        "src/renderer/src/**/*.tsx",
        "src/preload/*.d.ts",
        "src/libraries/**/*",
        "src/shared/**/*",
        "../../packages/**/*",
    ],
    "compilerOptions": {
        "composite": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@renderer/*": [
                "src/renderer/src/*"
            ],
            "@libraries/*": [
                "src/libraries/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ]
        }
    }
}