{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "moduleResolution": "bundler",
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": ".",
        "rootDir": ".",
        "paths": {
            "@janole/*": [
                "packages/*/src"
            ],
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}